<h2>Edit Review</h2>

<div> 
    <%= render 'shared/errors', object: @review %>
    <%= form_with model: [@iphone, @review] do |f| %>

      <div>
        <%= f.label :author, class: "label" %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
      <div>
        <%= f.label :body, class: "label" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div>
        <%= f.label :rating, class: "label" %>
        <%= f.text_field :rating, class: "form-control" %>
      </div>
      
      <br>
      <%= f.submit 'Submit', class: "btn btn-primary" %>

    <% end %>
</div>