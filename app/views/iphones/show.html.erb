<h2>Show Page</h2>
<div class="card " style="width: 18rem;">
  <img src="<%= @iphone.img %>" class="card-img-top" alt="<%= @iphone.title %>">
  <div class="card-body">
    <h5 class="card-title"><%= @iphone.title %></h5>
    <h6 class="card-subtitle mb-2 fw-bold">Price: <%= @iphone.price %>$</h6>
    <p class="card-text"><%= @iphone.body %></p>
    <%= link_to 'Edit', edit_iphone_path(@iphone), class: "btn btn-danger" %>
    <%= button_to 'Destroy', @iphone, method: :delete, class: "btn btn-warning" %>
  </div>
</div>

<hr class="my-3">
<h2>Write your review</h2>
<div> 
    <%= render 'shared/errors', object: @review %>
    <%= form_with model: [@iphone, @review] do |f| %>

      <div>
        <%= f.label :author, class: "label" %>
        <%= f.text_field :author, class: "form-control" %>
      </div>
      <div>
        <%= f.label :body, class: "label" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div>
        <%= f.label :rating, class: "label" %>
        <%= f.text_field :rating, class: "form-control" %>
      </div>
      
      <br>
      <%= f.submit 'Submit', class: "btn btn-primary" %>

    <% end %>
</div>
<h2 class="mt-3">Reviews</h2>
<div class="card">
<% @reviews.each do |review|%>
  <div class="card-header">
    <%= review.author %>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= review.rating %></h5>
    <p class="card-text"><%= review.body %></p>
    <%= link_to 'Edit', edit_iphone_review_path(@iphone, review), class: "btn btn-danger" %>
    <%= button_to 'Destroy', iphone_review_path(@iphone, review), method: :delete, class: "btn btn-warning" %>
  </div>
  <% end %>
</div>