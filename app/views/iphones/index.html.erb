<h2>All Iphones</h2>
  <div class="container text-center">
    <div class="row">
    <% @iphones.each do |iphone| %>
      <div class="col-md-4">
        <div class="card" style="width: 18rem;">
          <img src="<%= iphone.img %>" class="card-img-top" alt="<%= iphone.title %>">
          <div class="card-body">
          <h5 class="card-title"><%= iphone.title %></h5>
          <h6 class="card-subtitle mb-2 fw-bold">Price: <%= iphone.price %>$</h6>
            <p class="card-text"><%= iphone.body%></p>
            <%= link_to 'Show', iphone_path(iphone), class: 'btn btn-info' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
