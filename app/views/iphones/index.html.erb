<% provide :page_title, 'All Phones'%>

<% currently_at 'All Phones' %>

<h2 class="mb-3">All Iphones</h2>
<%= raw pagy_bootstrap_nav @pagy %>
  <div class="container text-center mb-3">
    <div class="row">
    <% @iphones.each do |iphone| %>
      <div class="col-md-4">
        <div class="card border-primary-subtle rounded-3" style="width: 18rem;">
          <img src="<%= iphone.img %>" class="card-img-top" alt="<%= iphone.title %>">
          <div class="card-body">
          <h5 class="card-title"><%= iphone.title %></h5>
          <h6 class="card-subtitle mb-2 fw-bold">Price: <%= iphone.price %>$</h6>
            <p class="card-text"><%= truncate strip_tags(iphone.body), length: 30 %></p>
            <%= link_to 'Show', iphone_path(iphone), class: 'btn btn-info' %>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
<%= raw pagy_bootstrap_nav @pagy %>
